{
    "manifest_version": 3,
    "name": "Currency Converter",
    "version": "1.0",
    "description": "Convert between currencies easily",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "assets/icon.png"
    },
    "web_accessible_resources": [{
      "matches": ["<all_urls>"],
      "resources": ["src/*", "build/*"]
    }],
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ]
  }